<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TabLayouts -->

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/searchHintColor</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TabLayout">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Toolbar.PopupOverlay">
        <item name="android:background">@drawable/background_action_bar_transparent</item>
    </style>

    <style name="ToolbarTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppBarDetails" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Layouts Gerais -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DividerLargeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_default_medium</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/margin_default_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_medium</item>
    </style>

    <style name="DividerSmallStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_divider_small</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/margin_default_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_medium</item>
    </style>

    <style name="ProgressDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TitleBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_default_medium</item>
        <item name="android:paddingBottom">@dimen/margin_default_medium</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TitleMoreTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/label_mais</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_weight">0.15</item>
    </style>

    <style name="TitleTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>

    <style name="TitleSubtitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Edit Perfil -->

    <style name="EditPerfilOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_perfil_option_heigh</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
        <item name="android:focusable">false</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="EditPerfilOptionImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_default_min</item>
    </style>

    <!-- LanÃ§amentos da Semana -->

    <style name="LancamentoSemanaButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lanc_sem_button_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/margin_default_medium</item>
        <item name="android:paddingRight">@dimen/margin_default_medium</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LancamentoSemanaButtonRipleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_item_words_default</item>
        <item name="android:layout_centerVertical">@dimen/margin_default_min</item>
    </style>

    <!-- Login -->

    <style name="LoginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/margin_default_medium</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_min</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">@dimen/margin_default_medium</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_min</item>
        <item name="android:background">@drawable/edit_text_login</item>
    </style>

    <style name="ErrorFormStyle">
        <item name="android:paddingBottom">@dimen/margin_default_min</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_medium</item>
        <item name="android:background">@drawable/background_error_form</item>
        <item name="android:textColor">@color/itemBackgroundLight</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <!-- Filter Dialog -->

    <style name="FilterDialogLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/primary_light</item>
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="FilterDialogDataEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- Perfil Estatisticas -->

    <style name="MoviesSavedTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_min</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <style name="HoursWatchedTextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_default_min</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <style name="HoursWatchedOptionTextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginTop">@dimen/margin_default_min</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <style name="HoursWatchedOptionNumberTextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_hours_watched_number</item>
    </style>

    <!-- MOvie Details -->

    <style name="ButtonsUserOptions">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">@dimen/margin_default_medium</item>
        <item name="android:textSize">@dimen/button_user_txt_size</item>
    </style>

    <style name="MovieDetailsTextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
    </style>


</resources>
