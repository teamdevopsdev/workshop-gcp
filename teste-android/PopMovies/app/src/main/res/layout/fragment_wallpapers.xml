<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_default_medium"
    android:layout_marginRight="@dimen/margin_default_medium">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wallpapers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_default_medium"/>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/wallpapers_principal_progress"
        style="@style/ProgressDefault"
        app:matProg_barColor="@color/colorAccent"
        app:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/wallpaper_nao_encontrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="@string/wallpapers_no_data" />

</FrameLayout>