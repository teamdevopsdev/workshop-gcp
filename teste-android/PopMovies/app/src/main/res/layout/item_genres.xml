<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/margin_default_min"
    android:layout_marginBottom="@dimen/margin_default_min"
    android:elevation="@dimen/margin_default_min"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/genres_item_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/genre_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/genres_item_height"
                android:alpha="0.9"
                android:scaleType="centerCrop"
                android:src="@drawable/img_gener_action"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:background="@drawable/background_border_retangule"
                android:padding="@dimen/margin_default_medium">

                <br.com.tiagohs.popmovies.ui.tools.PopTextView
                    android:id="@+id/title_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/genres_item_txt_size"
                    app:font="@string/font_open_sans" />

            </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

